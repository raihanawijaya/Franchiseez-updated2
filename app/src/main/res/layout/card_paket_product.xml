<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="288dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="48dp"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/nama_paket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Paket A"
            android:textColor="#494949"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/harga_paket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 8.000.000"
            android:layout_below="@id/nama_paket"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:textColor="#FF5B5F"
            android:textStyle="bold"
            />
    </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/title_fasilitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fasilitas"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/fasilitas"
                android:layout_below="@id/title_fasilitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="#494949"
                />


        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>