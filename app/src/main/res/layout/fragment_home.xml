<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />


            <RelativeLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/slider1"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:id="@+id/title_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori Franchise"
                    android:fontFamily="Roboto-Black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="18dp"
                    />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:scrollbars="none"
                    android:layout_below="@id/title_kategori"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <android.support.v7.widget.CardView
                            android:id="@+id/card1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="0dp"
                            android:layout_marginLeft="24dp"
                            android:paddingBottom="5dp"
                            >
                            <ImageView
                                android:layout_width="148dp"
                                android:layout_height="98dp"
                                android:src="@drawable/image1"
                                android:scaleType="fitXY"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="Roboto-Bold"
                                android:text="Makanan &amp; Minuman"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="98dp"
                                />

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/card2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="0dp"
                            android:layout_marginLeft="10dp"
                            android:paddingBottom="5dp"
                            android:layout_toRightOf="@id/card1"
                            >
                            <ImageView
                                android:layout_width="148dp"
                                android:layout_height="98dp"
                                android:src="@drawable/image1"
                                android:scaleType="fitXY"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="Roboto-Bold"
                                android:text="Makanan &amp; Minuman"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="98dp"
                                />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/card3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="0dp"
                            android:layout_marginLeft="10dp"
                            android:paddingBottom="5dp"
                            android:layout_toRightOf="@id/card2"
                            android:layout_marginRight="15dp"
                            >
                            <ImageView
                                android:layout_width="148dp"
                                android:layout_height="98dp"
                                android:src="@drawable/image1"
                                android:scaleType="fitXY"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="Roboto-Bold"
                                android:text="Makanan &amp; Minuman"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="98dp"
                                />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/card4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="0dp"
                            android:layout_marginLeft="24dp"
                            android:paddingBottom="5dp"
                            android:layout_below="@id/card1"
                            android:layout_marginTop="10dp"
                            >
                            <ImageView
                                android:layout_width="148dp"
                                android:layout_height="98dp"
                                android:src="@drawable/image1"
                                android:scaleType="fitXY"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="Roboto-Bold"
                                android:text="Salon Kecantikan"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="98dp"
                                />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/card5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="0dp"
                            android:layout_marginLeft="10dp"
                            android:paddingBottom="5dp"
                            android:layout_below="@id/card2"
                            android:layout_toRightOf="@id/card4"
                            android:layout_marginTop="10dp"
                            >
                            <ImageView
                                android:layout_width="148dp"
                                android:layout_height="98dp"
                                android:src="@drawable/image1"
                                android:scaleType="fitXY"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="Roboto-Bold"
                                android:text="Penginapan &amp; Travel"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="98dp"
                                />

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>
                </HorizontalScrollView>
            </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lysaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binggung Memilih Bisnis?"
            android:fontFamily="Roboto-Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tvsaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kami ada saran untuk anda"
            android:layout_marginLeft="24dp"
            android:textSize="14sp"
            android:layout_below="@id/title"
            />
        <TextView
            android:id="@+id/lihat_semua1"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Lihat Semua"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:paddingRight="-15dp"
            android:paddingLeft="0dp"
            android:textSize="13dp"
            android:drawableRight="@drawable/ic_selanjutnya1"
            android:drawablePadding="-30dp"
            android:textColor="@color/colorWhiteTransparent"
            />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvsaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvsaran"
                android:layout_marginTop="17dp"
                android:paddingBottom="10dp"
                >

            </android.support.v7.widget.RecyclerView>


    </RelativeLayout>

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Franchise"
                android:fontFamily="Roboto-Black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="6dp"
                android:layout_below="@id/lysaran"
                android:textColor="#F47100"
                />
            <TextView
                android:id="@+id/lihatsemua2"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:text="Lihat Semua"
                android:layout_alignParentRight="true"
                android:layout_below="@id/lysaran"
                android:paddingRight="-15dp"
                android:paddingLeft="0dp"
                android:textSize="13dp"
                android:drawableRight="@drawable/ic_selanjutnya1"
                android:drawablePadding="-30dp"
                android:textColor="@color/colorWhiteTransparent"
                android:layout_marginTop="9dp"
                />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title2"
            android:paddingLeft="11dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            >

        </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
