<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardutama2"
    android:layout_width="190dp"
    android:layout_height="235dp"
    card_view:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="11dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/image1" />

        <TextView
            android:id="@+id/title_card2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Pasco"
            android:layout_below="@id/image2"
            android:fontFamily="Roboto-Black"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/harga2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_card2"
            android:text="Rp 7.000.000"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            android:textColor="#B71C1C"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />


        <LinearLayout
            android:id="@+id/lystar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/harga2"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/hitrate2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hitrate "
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:padding="0dp"
                android:src="@mipmap/ic_start5" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:padding="0dp"
                android:src="@mipmap/ic_start5"
                android:layout_marginLeft="-15dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:padding="0dp"
                android:src="@mipmap/ic_start5"
                android:layout_marginLeft="-15dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:padding="0dp"
                android:src="@mipmap/ic_start5"
                android:layout_marginLeft="-15dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:padding="0dp"
                android:src="@mipmap/ic_start5"
                android:layout_marginLeft="-15dp"
                />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>