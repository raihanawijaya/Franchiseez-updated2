<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="128dp"
    android:layout_height="180dp"
    android:layout_margin="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivFrancLogo"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:src="@drawable/image3"
        android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/tvFrancName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dum dum"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/ivFrancLogo"
            android:layout_above="@id/tvOrderStock"/>

        <TextView
            android:id="@+id/tvOrderStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Stock"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tvOrderStock"/>




</RelativeLayout>