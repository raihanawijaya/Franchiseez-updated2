<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:background="@drawable/shadows">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_nama_pembeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raihana Salsabila"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_telepon_pembeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="085770077756"/>

        <TextView
            android:id="@+id/tv_alamat_pembeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Jl. Andara I No. 54 Pondok Labu, Cilandak"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="0.5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:layout_gravity="right" />
    </LinearLayout>


</LinearLayout>