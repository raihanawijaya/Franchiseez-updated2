<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@color/colorWhite"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fotouser"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="35dp"
                        android:layout_marginEnd="31dp"
                        android:src="@drawable/image1" />

                    <TextView
                        android:id="@+id/nama_akun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/fotouser"
                        android:layout_marginStart="21dp"
                        android:fontFamily="Roboto-Black"
                        android:text="M Taris"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        android:textColor="#454545"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignStart="@+id/nama_akun"
                        android:layout_below="@+id/nama_akun"
                        android:background="@drawable/btnlogin"
                        android:layout_toStartOf="@+id/fotouser"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tlsedit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:drawablePadding="-9dp"
                            android:drawableStart="@mipmap/ic_edit1"
                            android:fontFamily="Roboto-Regular"
                            android:paddingRight="15dp"
                            android:text="Edit Account"
                            android:textSize="15dp" />


                    </RelativeLayout>


                </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@drawable/shape__jual_product"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jual Product"
                    android:textSize="20dp"
                    android:textColor="@color/orange"
                    />

            </RelativeLayout>

            <ListView
                android:id="@+id/listview_akun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:scrollbars="none"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
            </ListView>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>